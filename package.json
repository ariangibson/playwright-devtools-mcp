{
  "name": "playwright-devtools-mcp",
  "version": "0.2.0",
  "description": "A specialized MCP server providing AI models with comprehensive Chrome DevTools access through Playwright for autonomous debugging, performance analysis, and security inspection",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "playwright-devtools-mcp": "src/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test tests/**/*.test.js",
    "test:integration": "node --test tests/integration/*.test.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/ README.md",
    "format:check": "prettier --check src/ tests/ README.md",
    "check": "npm run lint && npm run format:check && npm test",
    "postinstall": "npx playwright install chromium"
  },
  "keywords": [
    "mcp",
    "playwright", 
    "devtools",
    "browser",
    "automation",
    "ai",
    "debugging",
    "performance",
    "security",
    "claude",
    "anthropic"
  ],
  "author": "Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/playwright-devtools-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/playwright-devtools-mcp/issues"
  },
  "homepage": "https://github.com/your-username/playwright-devtools-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ]
}